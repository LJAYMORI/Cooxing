<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_tab_my_recipe_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/profile_item_tab_top_padding"
        android:paddingBottom="@dimen/profile_item_tab_bottom_padding"
        android:paddingLeft="@dimen/profile_item_tab_left_right_padding"
        android:paddingRight="@dimen/profile_item_tab_left_right_padding"
        android:background="#fff"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_wrote_my_recipe_profile"
            android:layout_width="0dp"
            android:layout_height="@dimen/profile_item_tab_height"
            android:layout_weight="1"
            android:background="@drawable/background_tab_unfocused_left"
            android:gravity="center"
            android:text="@string/profile_wrote_recipe"
            android:textColor="@color/navi_selected_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_interest_my_recipe_profile"
            android:layout_width="0dp"
            android:layout_height="@dimen/profile_item_tab_height"
            android:layout_weight="1"
            android:background="@drawable/background_tab_unfocused_center"
            android:gravity="center"
            android:text="@string/profile_interest_recipe"
            android:textColor="@color/navi_selected_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_open_my_recipe_profile"
            android:layout_width="0dp"
            android:layout_height="@dimen/profile_item_tab_height"
            android:layout_weight="1"
            android:background="@drawable/background_tab_unfocused_right"
            android:gravity="center"
            android:text="@string/profile_open_recipe"
            android:textColor="@color/navi_selected_text"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_tab_other_recipe_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/profile_item_tab_top_padding"
        android:paddingBottom="@dimen/profile_item_tab_bottom_padding"
        android:paddingLeft="@dimen/profile_item_tab_left_right_padding"
        android:paddingRight="@dimen/profile_item_tab_left_right_padding"
        android:background="#fff"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_wrote_other_recipe_profile"
            android:layout_width="0dp"
            android:layout_height="@dimen/profile_item_tab_height"
            android:layout_weight="1"
            android:background="@drawable/background_tab_unfocused_left"
            android:gravity="center"
            android:text="@string/profile_wrote_recipe"
            android:textColor="@color/navi_selected_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_interest_other_recipe_profile"
            android:layout_width="0dp"
            android:layout_height="@dimen/profile_item_tab_height"
            android:layout_weight="1"
            android:background="@drawable/background_tab_unfocused_right"
            android:gravity="center"
            android:text="@string/profile_interest_recipe"
            android:textColor="@color/navi_selected_text"
            android:textSize="14sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/view_empty_profile_tab"
        android:layout_width="match_parent"
        android:layout_height="247dp">

        <TextView
            android:id="@+id/text_empty_profile_tab"
            android:layout_width="239dp"
            android:layout_height="133dp"
            android:layout_gravity="center"
            android:background="@drawable/background_empty_profile_tab"
            android:gravity="center"
            android:text="EMPTY"
            android:textColor="#5b5b5b"
            android:textSize="17sp" />

    </FrameLayout>

</LinearLayout>

