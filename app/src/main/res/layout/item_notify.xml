<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/notify_item_height"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/notify_item_left_right_margin"
        android:layout_marginLeft="@dimen/notify_item_left_right_margin">

        <ImageView
            android:id="@+id/image_user_notify"
            android:layout_width="@dimen/notify_user_picture"
            android:layout_height="@dimen/notify_user_picture"
            android:src="@drawable/ic_launcher"/>

        <TextView
            android:id="@+id/text_content_notify"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:text="New Text"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="@dimen/notify_item_left_right_margin"
        android:layout_marginLeft="@dimen/notify_item_left_right_margin"
        android:background="#000"/>

</LinearLayout>
