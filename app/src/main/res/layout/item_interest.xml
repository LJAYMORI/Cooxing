<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/view_item_interest"
        android:layout_width="@dimen/interest_item_width"
        android:layout_height="@dimen/interest_item_height"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/image_item_background_interest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher"/>

        <TextView
            android:id="@+id/text_item_check_interest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/item_check_interest"
            android:visibility="invisible"/>
    </FrameLayout>


</LinearLayout>