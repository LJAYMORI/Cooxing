<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_write_image_item"
    android:layout_width="@dimen/write_image_item_size"
    android:layout_height="@dimen/write_image_item_size"
    android:layout_margin="4dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_write_image_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <FrameLayout
        android:id="@+id/view_count_write_image_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4000"
        android:visibility="gone">

        <TextView
            android:layout_width="@dimen/write_image_item_count_cover_size"
            android:layout_height="@dimen/write_image_item_count_cover_size"
            android:background="@drawable/background_step_item"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/text_count_write_image_item"
            android:layout_width="@dimen/write_image_item_count_size"
            android:layout_height="@dimen/write_image_item_count_size"
            android:layout_gravity="center"/>

    </FrameLayout>

</FrameLayout>