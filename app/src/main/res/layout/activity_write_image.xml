<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ljaymori.cooxing.write.image.WriteImageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="13"
            android:background="#656565"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_notice_write_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:gravity="center"
                android:text="@string/write_image_notice"
                android:textColor="#fff"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_image_count_write_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/cooxing_main_color" />

                <TextView
                    android:id="@+id/text_limit_count_write_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" / 10"
                    android:textColor="#fff" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="87">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_write_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/text_complete_write_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/write_image_complete_bottom_margin"
                android:layout_marginLeft="@dimen/write_image_complete_left_right_margin"
                android:layout_marginRight="@dimen/write_image_complete_left_right_margin"
                android:background="#d2d2d3"
                android:gravity="center"
                android:paddingBottom="@dimen/write_image_complete_top_bottom_padding"
                android:paddingTop="@dimen/write_image_complete_top_bottom_padding"
                android:text="@string/write_image_complete" />

        </FrameLayout>


    </LinearLayout>

</FrameLayout>
